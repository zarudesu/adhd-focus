# ADHD Focus - Self-Hosted Configuration
# Copy this file to .env and configure

# ===================
# Database
# ===================
POSTGRES_PASSWORD=your-super-secret-password-change-me
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# ===================
# JWT & Auth
# ===================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-at-least-32-characters
JWT_EXPIRY=3600

# Generate these with: npx supabase-gen-types
ANON_KEY=your-anon-key
SERVICE_ROLE_KEY=your-service-role-key

# Secret for Realtime
# Generate with: openssl rand -base64 64
SECRET_KEY_BASE=your-secret-key-base-at-least-64-characters

# ===================
# URLs
# ===================
API_EXTERNAL_URL=http://localhost:8000
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=

# Ports
API_EXTERNAL_PORT=8000
API_EXTERNAL_SSL_PORT=8443
STUDIO_PORT=3000

# ===================
# Email (SMTP)
# ===================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@example.com
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false

# ===================
# Registration
# ===================
DISABLE_SIGNUP=false

# ===================
# Integrations
# ===================

# Telegram Bot
# Create bot with @BotFather and get token
TELEGRAM_BOT_TOKEN=

# Google Calendar
# Create OAuth app in Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===================
# Studio
# ===================
STUDIO_DEFAULT_ORGANIZATION=ADHD Focus
STUDIO_DEFAULT_PROJECT=adhd-focus
